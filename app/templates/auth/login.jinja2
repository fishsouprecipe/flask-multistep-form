{% from "helpers.jinja2" import render_field %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
</head>
<body>
<form method="POST">
    {{ form.csrf_token }}
    {% for field in (
      form.username,
      form.password,
    )%}
      {{ render_field(field) }}
    {% endfor %}
    <input type="submit" value="Login">
  </form>
</body>
</html>

