{% macro render_field(field) %}
  <p>
    <div>{{ field.label }}</div>
    <div>{{ field(**kwargs) }} </div>
    {% if field.errors %}
      <ul class=form-field__errors>
        {% for error in field.errors %}
          <li>{{ error }}</li>
        {% endfor %}
      </ul>
    {% endif %}
  </p>
{% endmacro %}
